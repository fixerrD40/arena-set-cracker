<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="sets-1" author="hstafford">
        <comment>
            Create a table sets to which decks will belong.
        </comment>

        <!-- 1. Create table -->
        <createTable tableName="sets">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="app_user" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP"/>
        </createTable>

        <!-- 3. Add new composite unique constraint on ("user", "code") -->
        <addUniqueConstraint
                tableName="sets"
                columnNames="app_user, code"
                constraintName="users_sets_code_unique"/>

        <!-- 4. Add a new foreign key constraint on users' "id" -->
        <addForeignKeyConstraint
                baseTableName="sets"
                baseColumnNames="app_user"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="sets_users_fk"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>