<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-password-resets-table" author="hstafford">

        <!-- 1. Create password_resets table -->
        <createTable tableName="password_resets">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="app_user" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="token_hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="used" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- 2. Add a new foreign key constraint on users' "id" -->
        <addForeignKeyConstraint
                baseTableName="password_resets"
                baseColumnNames="app_user"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="sets_users_fk"
                onDelete="CASCADE"/>

    </changeSet>
</databaseChangeLog>