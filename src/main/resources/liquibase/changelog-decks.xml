<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="decks-1" author="hstafford">
        <comment>
            Create a table to hold decks.
        </comment>
        <createTable tableName="decks">
            <column name="name" type="varchar">
                <constraints primaryKey="true" nullable="false" primaryKeyName="decks_pk" />
            </column>
            <column name="arena_deck" type="varchar">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addUniqueConstraint tableName="decks" columnNames="name" constraintName="decks_name_unique" />
    </changeSet>

</databaseChangeLog>